@model Calicot.Store.Web.ViewModels.CreateProductViewModel

@section scripts
{
    <environment names="Development">
        <script src="~/js/views/products/create.js"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/js/views/products/create.min.js"></script>
    </environment>
}

<h2>
    @L("NewProduct")
</h2>

<form id="ProductCreationForm">

    <div class="form-group">
        <label for="Title">@L("Title")</label>
        <input type="text" name="Title" class="form-control" placeholder="@L("Title")" required maxlength="@Calicot.Store.Products.Product.MaxTitleLength">
    </div>

    <div class="form-group">
        <label for="Description">@L("Description")</label>
        <input type="text" name="Description" class="form-control" placeholder="@L("Description")" maxlength="@Calicot.Store.Products.Product.MaxDescriptionLength">
    </div>

    <div class="form-group">
        <label for="Price">@L("Price")</label>
        <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control" placeholder="@L("Price")" />
    </div>

    <button type="submit" class="btn btn-default">@L("Save")</button>

</form>