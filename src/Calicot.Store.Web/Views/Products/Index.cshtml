@model Calicot.Store.Web.ViewModels.IndexViewModel

@{
    ViewBag.Title = L("ProductList");
    ViewBag.ActiveMenu = "ProductList";
}

<h2>@L("ProductList")</h2>

<div class="row">
    <div>
        <ul class="list-group" id="TaskList">
            @foreach (var product in Model.Products)
            {
                <li class="list-group-item">
                    <span class="pull-right label @Model.GetProductLabel(product)">@product.Quantity</span>
                    <h4 class="list-group-item-heading">@product.Title</h4>
                    <div class="list-group-item-text">
                        @product.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")
                    </div>
                </li>
            }
        </ul>
    </div>
</div>